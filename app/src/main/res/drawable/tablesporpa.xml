<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#3577C2"/>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp"/>
            <stroke
                android:width="1dp"
                android:color="#3577C2"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#00A0F6"/>

            <size
                android:width="140dp"
                android:height="140dp"/>
            <stroke
                android:width="1dp"
                android:color="#00A0F6"/>
        </shape>

    </item>
</layer-list>